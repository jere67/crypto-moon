<section id="hero" class="d-flex justify-content-center align-items-center min-vh-100">
  <div class="px-4 py-5 my-5 text-center align-self-center">
    <h1 class="display-4 fw-bold text-body-emphasis">MoonReach</h1>
    <h2 class="display-6 text-body-emphasis">Track Your Crypto to the Moon</h1>
