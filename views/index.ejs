<section id="market" class="market-section">
  <div class="container market-content">
    <h2>Market Update</h2>
    <div class="market-content__coin-list">
      <div class="market-content__coin-list__top">
        <p>Coin</p>
        <p>Price</p>
        <p>24h Change</p>
        <p>Market Cap</p>
        <p>Volume</p>
      </div>
      <div class="market-content__coin-list__row">
        <% data.forEach(coin => { %>
        <div class="coin-row">
          <span>
            <img src="<%= coin.image %>" alt="<%= coin.name %> logo" width="20">
            <p><%= coin.name %></p>
          </span>
          <p>$ <%= coin.current_price.toFixed(2) %></p>
          <p class="<%= coin.price_change_percentage_24h >= 0 ? 'text-success' : 'text-danger' %>">
            <%= coin.price_change_percentage_24h.toFixed(2) %> %
          </p>
          <p>$ <%= coin.market_cap.toLocaleString() %></p>
          <p>$ <%= coin.total_volume.toLocaleString() %></p>
        </div>
        <% }); %>
      </div>
    </div>
  </div>
</section>


